{
  "name": "sentinelhub-api-gateway",
  "version": "1.0.0",
  "description": "SentinelHub API Gateway - Central routing and authentication",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "start:sonar": "docker-compose -f ../docker-compose.sonar.yml up -d",
    "stop:sonar": "docker-compose -f ../docker-compose.sonar.yml down",
    "sonar:logs": "docker-compose -f ../docker-compose.sonar.yml logs -f sonarqube",
    "install:semgrep": "pip3 install semgrep",
    "install:trufflehog": "docker pull trufflesecurity/trufflehog:latest",
    "install:gitleaks": "docker pull zricethezav/gitleaks:latest",
    "setup:security-tools": "npm run install:semgrep && npm run install:trufflehog && npm run install:gitleaks"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.876.0",
    "@aws-sdk/client-sts": "^3.876.0",
    "@clerk/clerk-sdk-node": "^4.13.23",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.11.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "eslint": "^8.54.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.23.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "js-yaml": "^4.1.0",
    "mongodb": "^6.19.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "redis": "^4.7.1",
    "uuid": "^9.0.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "security",
    "devops",
    "api-gateway",
    "microservices"
  ],
  "author": "Sarah Henia - SentinelHub",
  "license": "MIT"
}
